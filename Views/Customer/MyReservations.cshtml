@model List<TurboReserve.Models.ReservationViewModel>

<h1>Moje rezerwacje</h1>

@if (!Model.Any(r => r.Status != "Completed"))
{
    <p>Nie masz jeszcze żadnych aktywnych rezerwacji.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Usługa</th>
                <th>Usługodawca</th>
                <th>Data i godzina rozpoczęcia</th>
                <th>Data i godzina zakończenia</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var reservation in Model.Where(r => r.Status != "Completed").OrderBy(r => r.StartTime))
            {
                <tr>
                    <td>@reservation.ServiceName</td>
                    <td>@reservation.ServiceProviderName</td>
                    <td>@reservation.StartTime.ToString("g")</td>
                    <td>@reservation.EndTime.ToString("g")</td>
                    <td>@reservation.Status</td>
                </tr>
            }
        </tbody>
    </table>
}
