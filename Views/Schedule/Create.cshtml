@model TurboReserve.Models.ScheduleSlot

<h1>Dodaj dostępny termin</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="ServiceId">Usługa</label>
        <select asp-for="ServiceId" class="form-control" asp-items="@(new SelectList(ViewBag.Services, "Id", "Name"))"></select>
        <span asp-validation-for="ServiceId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StartTime">Czas rozpoczęcia</label>
        <input asp-for="StartTime" type="datetime-local" class="form-control" placeholder="Wybierz czas rozpoczęcia" />
        <span asp-validation-for="StartTime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EndTime">Czas zakończenia</label>
        <input asp-for="EndTime" type="datetime-local" class="form-control" placeholder="Wybierz czas zakończenia" />
        <span asp-validation-for="EndTime" class="text-danger"></span>
    </div>
    <br>
    <button type="submit" class="btn btn-primary">Dodaj</button>
    <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
</form>
<div asp-validation-summary="All" class="text-danger"></div>
